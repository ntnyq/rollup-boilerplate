{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "vitest/globals"],
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./scripts/**/*.ts", "./tests/**/*.ts", "./*.config.*"]
}
